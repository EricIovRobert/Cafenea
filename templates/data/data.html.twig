{% extends 'base.html.twig' %}

{% block title %}Lista Datelor{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Lista Datelor</h1>
        <a href="{{ path('data_add') }}" class="btn btn-primary">Adaugă Dată</a>
    </div>
    
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th></th>
                    <th>Data</th>
                </tr>
            </thead>
            <tbody>
                {% for entry in data %}
                    <tr>
                        <td>{{ loop.index }}</td> <!-- Numărul de ordine -->
                        <td>
                            <a href="{{ path('data_clients', { id: entry.id }) }}">
                                {{ entry.formattedDate }}
                            </a>
                        </td> <!-- Data formatată cu link -->
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" class="text-center text-muted">Nu există date disponibile</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
