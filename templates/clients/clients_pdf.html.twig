<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Clienti pentru data {{ date_formatted }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #000;
            padding: 5px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <h1>Clienti pentru data {{ date_formatted }}</h1>
    <table>
        <thead>
            <tr>
                <th>Nr.</th>
                <th>Nume Client</th>
                <th>Citire Anterioara</th>
                <th>Citire Actuala</th>
                <th>Diferenta</th>
                <th>Probe</th>
                <th>Pret</th>
                <th>Total</th>
                <th>Cafea Covim</th>
                <th>Cafea Lavazza</th>
                <th>Zahar</th>
                <th>Lapte</th>
                <th>Ciocolata</th>
                <th>Ceai</th>
                <th>Solubil</th>
                <th>Pahare Plastic</th>
                <th>Pahare Carton</th>
                <th>Palete</th>
            </tr>
        </thead>
        <tbody>
            {% for client in clients %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ client.nume }}</td>
                    <td>{{ client.citire_anterioara }}</td>
                    <td>{{ client.citire_actuala }}</td>
                    <td>{{ client.diferenta }}</td>
                    <td>{{ client.probe }}</td>
                    <td>{{ client.pret }}</td>
                    <td>{{ client.total }}</td>
                    <td>{{ client.cafea_covim }}</td>
                    <td>{{ client.cafea_lavazza }}</td>
                    <td>{{ client.zahar }}</td>
                    <td>{{ client.lapte }}</td>
                    <td>{{ client.ciocolata }}</td>
                    <td>{{ client.ceai }}</td>
                    <td>{{ client.solubil }}</td>
                    <td>{{ client.pahare_plastic }}</td>
                    <td>{{ client.pahare_carton }}</td>
                    <td>{{ client.palete }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
